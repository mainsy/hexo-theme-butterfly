#footer.layout
  - var now = new Date()
  - var nowYear = now.getFullYear()
  if theme.since && theme.since != nowYear
    .copyright!= `&copy; Copyright ${theme.since} - ${nowYear}, ${config.author}`
  else
    .copyright!= `&copy; Copyright ${nowYear}, `
      a(href=config.url)!= `${config.author}`
      !=`.`
  if theme.footer_custom_text
    .footer_custom_text!=`${theme.footer_custom_text}`   
  if theme.ICP.enable
    .icp
      a(href=theme.ICP.url)
        span=theme.ICP.text